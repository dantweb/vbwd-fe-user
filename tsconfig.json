{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./vue/src/*"],
      "@plugins/*": ["./plugins/*"],
      "vbwd-view-component": ["./node_modules/vbwd-view-component"],
      "vbwd-view-component/*": ["./node_modules/vbwd-view-component/*"],
      "#/*": ["./vue/src/*"]
    },
    "types": ["vite/client", "vitest/globals"]
  },
  "include": [
    "vue/src/**/*.ts",
    "vue/src/**/*.tsx",
    "vue/src/**/*.vue",
    "plugins/**/*.ts",
    "plugins/**/*.vue",
    "vue/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vue/tests/unit/server/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
